#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../xlsx@0.19.3/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../xlsx@0.19.3/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../xlsx@0.19.3/node_modules/xlsx/bin/xlsx.njs" "$@"
else
  exec node  "$basedir/../../../../../xlsx@0.19.3/node_modules/xlsx/bin/xlsx.njs" "$@"
fi
